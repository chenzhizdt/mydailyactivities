<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/botticelli"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/glacier"
        android:orientation="horizontal"
        android:padding="10dp" >

        <View
            android:layout_width="30dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/activities"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_add_activity"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/add_btn_background" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
		<View 
            android:layout_height="match_parent"
            android:layout_width="2dp"
            android:background="@color/timeline_color"
            android:layout_marginLeft="110dp"/>
        <ListView
            android:id="@+id/lv_activities"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/activity_list_divider"
            android:dividerHeight="1dp" >
        </ListView>
        
    </FrameLayout>

</LinearLayout>